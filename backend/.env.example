# VegaKash.AI Backend Environment Variables
# Copy this file to .env and fill in your values
# SECURITY: Never commit actual secrets to version control!

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# OpenAI API Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# OpenAI model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# API timeout in seconds (default: 60)
API_TIMEOUT=60

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Environment: development | production
ENVIRONMENT=development

# Server port
PORT=8000

# Frontend URL for CORS (development)
FRONTEND_URL=http://localhost:5173

# Production domain (without https://)
PRODUCTION_DOMAIN=vegaktools.com

